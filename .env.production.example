# Production Environment Variables
# Copy this file to .env on your production server and fill in the values

# Database - Use strong password
DB_USER="tipsio"
DB_PASSWORD="GENERATE_STRONG_PASSWORD"
DB_NAME="tipsio"
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@db:5432/${DB_NAME}"

# NextAuth - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="GENERATE_NEW_SECRET"
NEXTAUTH_URL="https://your-domain.com"

# Encryption - Generate with: openssl rand -hex 32
ENCRYPTION_KEY="GENERATE_NEW_KEY"

# Midtrans Payment Gateway
MIDTRANS_SERVER_KEY="your-production-server-key"
MIDTRANS_CLIENT_KEY="your-production-client-key"
MIDTRANS_IS_PRODUCTION="true"

# Email (Resend)
RESEND_API_KEY="your-resend-api-key"

# SMS (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-sid"
TWILIO_AUTH_TOKEN="your-twilio-token"
TWILIO_PHONE_NUMBER="your-twilio-number"

# Deployment (for deploy.sh)
DEPLOY_SERVER="your-server-ip"
DEPLOY_USER="deploy"
DEPLOY_DOMAIN="your-domain.com"
